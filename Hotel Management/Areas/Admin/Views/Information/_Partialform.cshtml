@model Hotel_Management.Models.Information

@Html.HiddenFor(m => m.Id)
<div class="form-group row">
    <label for="Name" class="col-form-label col-2 text-right">Name:</label>
    <div class="col-10">
        @Html.TextBoxFor(m =>m.Name, new { @class= "form-control", placeholder = "Name", required = true })
    </div>
</div>

<div class="form-group row">
    <label for="Code" class="col-form-label col-2 text-right">Address:</label>
    <div class="col-10">
        @Html.TextBoxFor(m => m.Address, new { @class = "form-control", placeholder = "Address", required = true })
    </div>
</div>

<div class="form-group row">
    <label for="Code" class="col-form-label col-2 text-right">Country:</label>
    <div class="col-10">
        @Html.TextBoxFor(m => m.Country, new { @class = "form-control", placeholder = "Country", required = true })
    </div>
</div>

